<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BorrowedBooks">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimaryDark"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:contentInsetStart="50dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BookShelf"
            android:textSize="40dp"
            android:fontFamily="@font/justanotherhand"
            />

    </android.support.v7.widget.Toolbar>

    <EditText
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:id="@+id/newBooklistNameText"
        android:layout_width="300dp"
        android:layout_marginTop="200dp"
        android:hint="Booklist name"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"/>

    <Button
        android:background="@drawable/round_corner_bg"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:id="@+id/createNewBooklistBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create"/>

</LinearLayout>